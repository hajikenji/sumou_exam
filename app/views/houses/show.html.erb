<p id="notice"><%= notice %></p>
<p>
  <strong>物件名:</strong>
  <%= @house.name %>
</p>
<p>
  <strong>賃料:</strong>
  <%= @house.rent %>円
</p>
<p>
  <strong>住所:</strong>
  <%= @house.residence %>
</p>
<p>
  <strong>築年数:</strong>
  <%= @house.built %>年
</p>
<p>
  <strong>備考:</strong>
  <%= @house.remarks %>
</p>
<% @house.near_stations.each do |item| %>
  <% @array += 1 %>
  <% if @house.near_stations[@array][:route_name].present? %>
    <h3>最寄り駅 <%= @station_number %> </h3>
    <% @station_number += 1 %>
    <p>
      <strong>  路線名</strong>
      <%= @house.near_stations[@array][:route_name] %>
    </p>
    <p>
      <strong>駅名</strong>
      <%= @house.near_stations[@array][:station] %>
    </p>
    <p>
      <strong>徒歩分数</strong>
      <%= @house.near_stations[@array][:time_on_foot] %>
    </p>
  <% end %>
<% end %>
<% if @house.near_stations[0][:route_name].blank? && @house.near_stations[2].blank? %>
  <p>駅情報なし</p>
<% end %>
<%= link_to '編集', edit_house_path(@house) %> |
<%= link_to '戻る', houses_path %>
